{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "tests/*": [
        "__tests__/unit/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    "src/**/*.vue",
    "__tests__/**/*.ts",
    "__tests__/**/*.json",
    "__tests__/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
