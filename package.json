{
  "name": "vue-material",
  "description": "Material Design for Vue.js",
  "version": "2.0.0",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "marcosmoura",
    "email": "marcosvmmoura@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vuematerial/vue-material.git"
  },
  "bugs": {
    "url": "https://github.com/vuematerial/vue-material/issues"
  },
  "scripts": {
    "lerna": "lerna",
    "updated": "lerna updated",
    "clean": "lerna clean --yes && rm -rf node_modules yarn.lock && yarn",
    "lint": "vue-cli-service lint",
    "dev": "(cd docs && yarn dev)"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@vue/cli-plugin-typescript": "^3.1.1",
    "@vue/cli-service": "^3.1.4",
    "lerna": "^3.4.3",
    "lint-staged": "^8.1.0",
    "ts-jest": "^23.10.5",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.1.6",
    "vue": "^2.5.17",
    "vue-template-compiler": "^2.5.17",
    "yorkie": "^2.0.0"
  },
  "workspaces": [
    "docs",
    "packages/vue-material",
    "packages/@vuematerial/*"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">= 9.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
